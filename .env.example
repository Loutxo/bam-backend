# Variables d'environnement pour BAM Backend

# Base de données PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/bam_database"

# Configuration serveur
PORT=3000
NODE_ENV=development

# JWT pour authentification (à implémenter)
JWT_SECRET="your-very-secure-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Configuration CORS
CORS_ORIGIN="http://localhost:3000"

# Logs
LOG_LEVEL="info"

# Upload de fichiers (pour les photos de profil)
MAX_FILE_SIZE="5mb"
UPLOAD_PATH="./uploads"

# Géolocalisation
DEFAULT_SEARCH_RADIUS_KM=2
MAX_SEARCH_RADIUS_KM=10

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# BAMs configuration
DEFAULT_BAM_EXPIRY_MINUTES=60
MAX_BAM_EXPIRY_MINUTES=1440

# Notifications (à implémenter)
# FIREBASE_PROJECT_ID=""
# FIREBASE_PRIVATE_KEY=""
# FIREBASE_CLIENT_EMAIL=""