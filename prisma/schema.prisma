generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  pseudo    String
  phone     String   @unique
  photoUrl  String?
  createdAt DateTime @default(now())
  bams      Bam[]
}

model Bam {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  text        String
  price       Float
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  expiresAt   DateTime
}
