{
  "name": "bam-backend",
  "script": "index.js",
  "instances": "max",
  "exec_mode": "cluster",
  "env": {
    "NODE_ENV": "production",
    "PORT": 3000
  },
  "log_file": "./logs/app.log",
  "out_file": "./logs/out.log",
  "error_file": "./logs/error.log",
  "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
  "merge_logs": true,
  "max_memory_restart": "1G",
  "node_args": ["--max-old-space-size=1024"],
  "watch": false,
  "ignore_watch": ["node_modules", "logs"],
  "restart_delay": 4000,
  "max_restarts": 10,
  "min_uptime": "10s"
}

